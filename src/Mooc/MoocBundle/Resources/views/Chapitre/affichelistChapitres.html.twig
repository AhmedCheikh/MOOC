{% extends "MoocMoocBundle::layout.html.twig" %}

{% block container %}


    <div class="container_12">
        <div class="grid_12">
            <h2 class="mb0">Liste des chapitre</h2>
            <br/>
        </div>
    </div>

    <div class="gray_block gb1">
        <div class="container_12">
            <div class="grid_12">
                <div class="responsive">
                    <ul class="a_content">
                        <!-- 1 -->
                        {% for chapitre in listeChapitres %}
                            <li>
                                <div class="card-front">
                                    <div class="text2">{{chapitre.titre}}</div>
                                    <p>{{chapitre.objectif}}</p>
                                </div>
                                <div class="card-back">
                                    <h2><a href="#">Click here</a></h2>
                                </div>
                                <!-- Content -->
                                <div class="all-content">
                                    <div class="text2">{{chapitre.titre}}</div>
                                    <hr>
                                    <br>
                                    <center>
                                        <video width="900" height="300" controls>
                                            <source src="bundles/moocmooc/video/{{chapitre.video}}" type="video/mp4">
                                        </video>
                                    </center>
                                    <br>  
                                    <br> 
                                    <center>
                                        <div class="rec-obj"><p>{{chapitre.objectif}}</p></div>
                                    </center>
                                    <br>
                                   
                                </div>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>

{% endblock %}